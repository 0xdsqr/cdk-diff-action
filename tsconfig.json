{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "./src",
      "baseUrl": "./",
      "sourceMap": true,
      "outDir": "./dist",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "newLine": "lf"
    },
    "exclude": ["./dist", "./node_modules","./coverage", "src/jest.config.ts", "./test"]
  }